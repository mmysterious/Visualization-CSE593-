@model Query

@{
    ViewBag.Title = "Welcome";
}

<h1>Query</h1>

<div class="row">
    <form asp-action="Index" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Code" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Code" class="form-control" placeholder="e.g. FB+MSFT+APPL" />
            </div>
            <span asp-for="Code"></span>
        </div>
        <div class="form-group">
            <label asp-for="From" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="From" class="form-control" type="date" />
            </div>
            <span asp-for="From"></span>
        </div>
        <div class="form-group">
            <label asp-for="To" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="To" class="form-control" type="date" />
            </div>
            <span asp-for="To"></span>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" value="Query"
                       class="btn btn-success" />
            </div>
        </div>
    </form>
</div>
